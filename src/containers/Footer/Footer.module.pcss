.container {
  display: flex;
  flex-direction: column;
  background: var(--color-light);
  position: absolute;
  left: 0;
  width: 100%;
  padding: 0 40px;
}

.wrap {
  width: 100%;
  max-width: 1600px;
  margin: 0 auto;
}

.top {
  display: flex;
  justify-content: space-between;
  border-bottom: var(--border-gray-1);
  padding: 60px 0 80px;
}

.section {
  display: flex;
  flex-direction: column;
  max-width: 262px;
}

.title {
  margin-bottom: 36px;
}

.text,
.link {
  display: flex;

  span {
    flex: 1;
  }

  .icon {
    &:not(:last-child) {
      margin-right: 10px;
    }
  }

  &:not(:last-child) {
    margin-bottom: 20px;
  }
}

.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px 0;
}

.logo {
  margin-right: 28px;
}

.socials {
  display: flex;
  align-items: center;

  .social {
    cursor: pointer;

    &:hover {
      path {
        stroke: #ffbf43;
      }
    }

    &:not(:last-child) {
      margin-right: 10px;
    }
  }
}

.documents {
  display: flex;
}

.document {
  margin: 0 20px 0 0;

  &:last-child {
    margin: 0;
  }
}

.link,
.document {
  &:hover {
    cursor: pointer;
    color: var(--color-brand);
  }
}
