.card {
  display: flex;
  justify-content: space-between;
  width: calc(100% - 20px);
  height: 270px;
  padding: 24px;
  background: var(--color-light);
}

.image {
  height: 100%;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-right: 10px;
  min-width: 115px;
}

.name {
  width: min-content;
  text-align: left;
  margin-bottom: 4px;
}

.amount {
  margin-bottom: 70px;
}

.link {
  width: fit-content;
  text-align: center;
}
