.form {
  max-width: 375px;

  form {
    width: 100%;
  }
}

.input {
  margin-bottom: 25px;
}

.forgotPassword {
  display: flex;
  justify-content: flex-end;
  margin: 20px 0;

  a {
    text-decoration: none;
    color: #bdbdbd;
    cursor: pointer;

    &:hover {
      color: #333333;
    }
  }
}

.selected {
  border-bottom: 1px solid #333333;
  color: #333333;
}

.notSelected {
  border-bottom: 1px solid transparent;
  color: #bdbdbd;
}
