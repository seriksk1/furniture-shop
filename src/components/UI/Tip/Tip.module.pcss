.tip {
  position: absolute;
  display: flex;
  align-items: center;
  width: fit-content;
  top: 20px;
  min-width: 70px;
  height: 30px;
  font-size: 16px;
  line-height: 24px;
  text-align: center;
  text-transform: capitalize;
  color: #ffffff;
}

.sale {
  background: #ff0000;
}

.new {
  background: #93b36e;
}

.left {
  left: 0;
  padding: 0 12px 0 0;
  justify-content: flex-end;
}

.right {
  right: 0;
  padding: 0 0 0 12px;
  justify-content: flex-start;
}
