.container {
  display: flex;
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: var(--color-dark);
}

.content {
}

.close {
  position: absolute;
  top: 80px;
  right: 8%;
  width: 24px;
  height: 24px;
  cursor: pointer;

  &:hover {
    path {
      fill: #ffffff;
    }
  }

  path {
    fill: #bdbdbd;
  }
}
