.container {
  display: flex;
  align-items: center;
  padding: 36px 0;
}

.item {
  display: flex;

  .link {
    font-size: 16px;
    line-height: 150%;
    text-decoration: none;
    color: #bdbdbd;
  }

  .icon {
    transform: rotate(180deg);
    margin: 0 5px;
  }

  &:last-child {
    .link {
      color: #333333;
    }

    .icon {
      path {
        fill: #333333;
      }
    }
  }
}
