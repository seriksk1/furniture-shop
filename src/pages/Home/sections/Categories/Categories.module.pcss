.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.title {
  margin-bottom: 8px;
  text-align: center;
}

.subtitle {
  width: 100%;
  max-width: 406px;
  margin-bottom: 32px;
  text-align: center;
}

.slider {
  width: calc(100% - 112px);

  &.slick-slider {
    .slick-next {
      right: -50px !important;
    }
  }
}
