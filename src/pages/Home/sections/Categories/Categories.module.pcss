.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.title {
  font-size: 34px;
  line-height: 150%;
  margin-bottom: 8px;
  text-align: center;
  color: #333333;
}

.subtitle {
  width: 100%;
  max-width: 406px;
  font-size: 20px;
  line-height: 150%;
  margin-bottom: 32px;
  text-align: center;
  color: #bdbdbd;
}

.slider {
  width: calc(100% - 104px);

  &.slick-slider {
    .slick-next {
      right: -50px !important;
    }
  }
}
