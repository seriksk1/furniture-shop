.container {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding-right: 5vw;
  border: var(--border-dark-1);
  height: 24.6vw;

  .image {
    width: auto;
    height: 100%;
  }

  .wrap {
    display: flex;
    height: 100%;

    .brand {
      display: flex;
      align-items: center;
      width: auto;
      height: 14vw;
      margin: 0 5.5vw;
      align-self: center;

      img {
        width: auto;
        height: 100%;
        max-height: 162px;
      }
    }

    .discount {
      display: flex;
      flex-direction: column;
      position: relative;

      .time {
        padding: 12px 48px;
        margin-left: 4vw;
        align-self: center;
        white-space: nowrap;
        text-transform: uppercase;
        background: var(--color-red);
      }

      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-left: var(--border-dark-1);
        padding: 2vw 0 0 4vw;

        .title {
          letter-spacing: 0.12em;
          text-transform: uppercase;
        }

        .value {
          font-size: 112px;
          line-height: 137px;
          text-transform: uppercase;
        }

        .subtitle {
          margin-bottom: 18px;
          text-transform: uppercase;
        }
      }
    }
  }
}

@media screen and (max-width: 1600px) {
  .container {
    .image {
      max-height: 25vw;
    }

    .wrap {
      .discount {
        .time {
          padding: 5px 16px;
          font-size: var(--text-size-xs);
        }

        .content {
          .value {
            font-size: var(--text-size-xxl);
            line-height: var(--text-lh-133);
            margin-bottom: 0;
          }

          .subtitle {
            font-size: var(--text-size-l);
          }
        }
      }
    }
  }
}

