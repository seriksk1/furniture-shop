@media screen and (max-width: 834px) {
  .container {
    .image {
      max-height: 25vw;
    }

    .wrap {
      .brand {
        margin: 0 10px;
      }

      .discount {
        .time {
          padding: 5px 16px;
          font-size: var(--text-size-xs);
        }

        .content {
          .value {
            font-size: 54px;
            line-height: var(--text-lh-133);
          }
        }
      }
    }
  }
}

@media screen and (max-width: 768px) {
  .container {
    .wrap {
      .discount {
        .content {
          .value {
            font-size: 32px;
          }
        }
      }
    }
  }
}

@media screen and (max-width: 640px) {
  .container {
    height: 40vw;
    max-height: unset;
    padding: 0;

    .image {
      width: 100%;
      height: 100%;
      max-height: unset;
      position: absolute;
      object-fit: cover;
      filter: blur(3px);
      opacity: 0.5;
    }

    .wrap {
      position: relative;
      margin: 0 auto;
      z-index: 10;

      .brand {
        margin: 0 8vw 0 0;
      }

      .discount {
        .content {
          margin-top: 4vw;
        }
      }
    }

    .tip {
      display: none;
    }
  }
}

