.page {
  display: flex;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  height: 100%;
  flex: 1 1;

  &:first-child {
    padding: 30vh 25px 25px;
  }
}

.image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.logo {
  position: absolute;
  top: 25px;
}

.slider {
  width: 100%;
  height: 100%;

  img {
    width: inherit !important;
  }
}
