.container {
  .product {
    margin-bottom: 180px;
  }

  .similar {
    margin-bottom: 168px;
  }

  .reviews {
    margin-bottom: 120px;
  }
}

@media screen and (max-width: 1280px) {
  .container {
    .product,
    .reviews,
    .similar {
      margin-bottom: 80px;
    }
  }
}

@media screen and (max-width: 480px) {
  .container {
    .product,
    .reviews,
    .similar {
      margin-bottom: 64px;
    }
  }
}
