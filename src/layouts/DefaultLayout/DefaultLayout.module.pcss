.layout {
  max-width: 1600px;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

@media screen and (max-width: 1600px) {
  .layout {
    padding: 0 40px;
    margin: 0;
  }
}

@media screen and (max-width: 1024px) {
  .layout {
    padding: 0 30px;
  }
}

@media screen and (max-width: 834px) {
  .layout {
    padding: 0 25px;
  }
}

@media screen and (max-width: 640px) {
  .layout {
    padding: 0 20px;
  }
}
